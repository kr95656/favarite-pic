!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FavaritePic
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    -# = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    -# = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render 'layouts/notifications' 
    %header
      -if user_signed_in?
        .user_nav-grid-6
          = link_to "マイページ",user_path(current_user.id), method: :get,  class: "btn mypage" 
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn logout"
          = link_to "投稿する", new_item_path, class: "btn post"
      -else
        .grid-6
          = link_to "ログイン", new_user_session_path, class: "btn"
          = link_to "新規登録", new_user_registration_path, class: "btn" 
      .items-list
        %h.items-tag
          Pic LIST
        .item-tag
          = render partial: 'tags/tag', collection: @tags
          -# = render partial: 'tags/tag', collection: @tags 
    = yield
