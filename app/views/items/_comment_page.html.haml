.show-item
  .item-title= "<タイトル>: #{@item.title}"
  .item-nav
    .post-image{:style => "background-image: url(#{@item.image}"}  
    .post-text
      - if @item.text.present?
        %p.post-text__contents
          = @item.text
    .poster-name= link_to "投稿者: #{@item.user.username}", user_path(@item.user), class: 'show-user'
    .date= @item.created_at.strftime("%Y年%m月%d日 %H時%M分")